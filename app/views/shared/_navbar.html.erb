<div class="navbar navbar-expand-sm navbar-light navbar-complex">
    <div class="d-flex">
      <%= link_to "#", class: "navbar-brand" do %>
        <%= image_tag "complex-circle.png" %>
      <% end %>
      <h3 class="complex-written">THE COMPLEX</h3>
    </div>
  

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <nav class="navbar-nav">
      <span class="nav-indicator"></span>
      <a href="#1" class="nav-item" active-color="orange">Home
      <a href="#2" class="nav-item" active-color="green">Products
      <a href="#3" class="nav-item" active-color="blue">Team
      <a href="#4" class="nav-item" active-color="red">Reviews
      <a href="#5" class="nav-item" active-color="yellow">Location
      <a class="nav-item">
        <i class="fas fa-mobile" data-toggle="modal" data-target="#exampleModalCenter" style="cursor: pointer;"></i>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Want to ask about our services?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                You can call 1-509-555-5555
                If you'd like to book an appointment with one of our barbers, please use the Booksy app
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </a>
      
      <a class="nav-item dropdown">
        <%= link_to "Menu", "#", class: "btn-ghost", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Products", "#1", class: "dropdown-item black-text" %>
          <%= link_to "Barbers", "#2", class: "dropdown-item black-text" %>
          <%= link_to "Reviews", "#3", class: "dropdown-item black-text" %>
          <%= link_to "Location", "#4", class: "dropdown-item black-text" %>
        </div>
      </a>
    </nav>
  </div>
</div>